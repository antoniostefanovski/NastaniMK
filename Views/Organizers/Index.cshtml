@model IEnumerable<NastaniMK_2023.Models.Organizer>

@{
    ViewBag.Title = "Организатори";
}

<h3 class="textColor mt-5">Организатори</h3>

<p>
    @Html.ActionLink("Креирај организатор", "Create", null, new {@class="btn btn-primary"})
</p>
<table class="table" id="organizerTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Banner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrganizerType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrganizerURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.Banner" style="width: 80px; height: 80px;" />
                </td>
                <td>
                    @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrganizerType)
                </td>
                <td>
                    <a href="@item.OrganizerURL" target="_blank">@item.OrganizerURL</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts {
    
    <script>

        $(document).ready(function () {

            var table = $("#organizerTable").DataTable();

        });

    </script>    

}
