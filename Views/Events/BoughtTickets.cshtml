@model NastaniMK_2023.Models.CombinedModel
@{
    ViewBag.Title = "Купи Карти";
}

<h3 class="mt-5">Купи Карти</h3>
<p class="lead">Ве молиме добро проверете ги информациите пред да одите <span class="textColor fw-semibold">„КУПИ“</span></p>

<div class="card">
    <div class="card-header">
        Информации
    </div>
    <div class="card-body">

        <div class="form-group">
            @Html.Label("Име и Презиме") <br/>
            <span class = "textColor fw-semibold">@Model.BuyTicketModel.UserName</span>
        </div>

        <div class="form-group mt-2">
            @Html.Label("Email адреса") <br/>
            <span class="textColor fw-semibold">@Model.BuyTicketModel.Email</span>
        </div>

        <div class="form-group mt-2">
            @Html.Label("Контакт") <br/>
            <span class="textColor fw-semibold">@Model.BuyTicketModel.Contact</span>
        </div>

        <div class="form-group mt-2">
            @Html.Label("Број на карти") <br/>
            <span class="textColor fw-semibold">@Model.BuyTicketModel.NumberOfTickets</span>
        </div>

        <div class="form-group mt-2">
            @Html.Label("Цена по карта") <br/>
            <span class="textColor fw-semibold">@Model.BuyTicketModel.Price &euro;</span>
        </div>

        <hr />  

        <div class="form-group">
            @Html.Label("Вкупна цена") <br/>
            <span class="textColor fw-semibold">@Model.TotalPrice &euro;</span>
        </div>

        <div>
            @if (User.IsInRole("Administrator") || User.IsInRole("Organizer"))
            {
                @Html.ActionLink("Купи", "Index", null, new { @class = "btn btn-primary mt-5" })
            }
            else
            {
                @Html.ActionLink("Купи", "FinalizeBuyProcess", null, new { @class = "btn btn-primary mt-5" })
            }
        </div>

    </div>
</div>

<div>
    @Html.ActionLink("Излез", "IndexUser", "Events", new { id = Model.EventId }, new { @class = "btn btn-primary mt-5" })
</div>
