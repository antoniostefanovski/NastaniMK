@model NastaniMK_2023.Models.AddUserToRoleModel
@{
    ViewBag.Title = "Улоги";
}

<h3 class="textColor mt-5">Додади корисник на улога</h3>

@using (Html.BeginForm("AddUserToRole", "Account")) { 

    <div class="card">
        <div class="card-header">
            Admin Поглед
        </div>
        <div class="card-body">
            <div class="form-group">
                @Html.LabelFor(u => u.Email)
                @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(u => u.SelectedRole)
                @Html.DropDownListFor(u => u.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" })
            </div>

            <div class="form-group mt-2">
                <button class="btn btn-primary">Додади</button>
            </div>
        </div>
    </div>

}

